# Application
NODE_ENV=development
PORT=3000
# HOST binding:
# - 0.0.0.0: Required for Docker - allows port mapping to work (host machine -> container)
# - localhost: Only works inside container, breaks port mapping from host
HOST=0.0.0.0

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=boom
DB_PASSWORD=boom_dev_password
DB_DATABASE=boom_dev

# JWT Configuration
JWT_SECRET=secret-key-change-in-production
JWT_REFRESH_SECRET=refresh-secret-key-change-in-production

# Boom Booking API Configuration
BOOM_API_BASE_URL=https://api.boomnow.com
BOOM_CLIENT_ID=your_client_id_here
BOOM_CLIENT_SECRET=your_client_secret_here
BOOM_OAUTH_URL=https://api.boomnow.com/oauth/token

# PostgreSQL (for docker-compose)
POSTGRES_USER=boom
POSTGRES_PASSWORD=boom_dev_password
POSTGRES_DB=boom_dev
