# Application
NODE_ENV=production
PORT=3000
# HOST binding:
# - 0.0.0.0: Required for Docker - allows port mapping to work (host machine -> container)
# - localhost: Only works inside container, breaks port mapping from host
HOST=0.0.0.0

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=boom
DB_PASSWORD=boom_prod_password_change_me
DB_DATABASE=boom_prod

# JWT Configuration - MUST CHANGE THESE IN PRODUCTION
JWT_SECRET=your-very-secure-secret-key-here
JWT_REFRESH_SECRET=your-very-secure-refresh-secret-key-here

# PostgreSQL (for docker-compose)
POSTGRES_USER=boom
POSTGRES_PASSWORD=boom_prod_password_change_me
POSTGRES_DB=boom_prod
